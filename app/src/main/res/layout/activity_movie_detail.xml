<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleMarginEnd="64dp"
                android:fitsSystemWindows="true">

            <ImageView
                    android:id="@+id/detail_movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:padding="@dimen/default16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/imdb_rating"
                    android:id="@+id/detail_movie_rating_label"/>
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_movie_rating_bar"
                    android:numStars="5"
                    android:rating="0"
                    android:isIndicator="true"
                    android:layout_gravity="center"
                    android:stepSize="0.1"/>
            <TextView
                    android:id="@+id/detail_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
            <TextView
                    android:id="@+id/detail_movie_plot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_actors"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_movie_actors"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/primary_text_light"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_writer"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_movie_writer"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/primary_text_light"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_awards"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_movie_awards"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/primary_text_light"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:measureWithLargestChild="false"
                    android:stretchColumns="1"
                    android:shrinkColumns="0">
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_type"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metascore"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_metascore"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/runtime"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_runtime"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rated"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_rated"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/released"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_released"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/year"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_year"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/director"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_director"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/genre"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_genre"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/language"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/detail_movie_language"
                            android:textColor="@android:color/primary_text_light"/>
                </TableRow>
                <TableRow android:measureWithLargestChild="false">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/country"
                            android:paddingRight="@dimen/default16dp"
                            android:paddingEnd="@dimen/default16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_movie_country"
                    android:textColor="@android:color/primary_text_light"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_movie_favorite"
            app:layout_anchor="@id/app_bar_layout"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default16dp"
            android:layout_marginRight="@dimen/default16dp"/>

</android.support.design.widget.CoordinatorLayout>